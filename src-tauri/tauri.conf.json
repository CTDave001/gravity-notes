{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Gravity",
  "version": "1.0.0",
  "identifier": "com.gravity.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Gravity",
        "width": 1000,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://fonts.gstatic.com https://fonts.googleapis.com https://cdn.jsdelivr.net https://github.com https://*.github.com https://api.github.com; font-src 'self' https://fonts.gstatic.com https://cdn.jsdelivr.net data:; img-src 'self' asset: http://asset.localhost blob: data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": false
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/CTDave001/gravity-notes/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU1QjlDNjI5MUQxNjQzNzcKUldSM1F4WWRLY2E1VlNTR1NkdzhjWmNnYmk3UUpGWnNvQWxYbmZSSTlJOUxDT09KVEFjc1RCU28K"
    }
  }
}
